<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="auctionService" class="io.crowdcode.speedbay.auction.service.AuctionServiceBean">
        <constructor-arg index="0" ref="beanName"/>
        <property name="auctionRepository" ref="auctionRepository"></property>
    </bean>

    <bean id="beanName" class="java.lang.String">
    </bean>

    <bean id="auctionRepository" class="io.crowdcode.speedbay.auction.repository.inmemory.AuctionRepositoryInMemoryBean">
        <property name="store" ref="inMemoryStore"></property>
    </bean>

    <bean id="inMemoryStore" class="io.crowdcode.speedbay.common.inmemory.InMemoryStore"></bean>

</beans>